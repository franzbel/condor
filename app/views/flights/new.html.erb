<%= form_for @flight  do |f|%>
    <%= f.label(:hours, "Horas") %>
    <%= f.number_field(:hours) %> <br>
    <%= f.label(:minutes, "Minutos") %>
    <%= f.number_field(:minutes) %> <br>
    <%= f.label(:seconds, "Segundos") %>
    <%= f.number_field(:seconds) %> <br>
    <%= f.submit(:Enviar) %>
<% end %>
<%= link_to("indice", flights_path) %>